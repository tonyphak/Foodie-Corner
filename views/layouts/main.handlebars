    crossorigin="anonymous"></script>
  <title>Home Page</title>
</head>

<body>
  <div class="container" id="container">
    <div class="row" id="navbar">
    <nav class="navbar navbar-expand-xl navbar-light" >
      <a class="col-md-12 col-lg-3 navbar-brand" href="#"><img src="/images/logo.png" alt="logo" id="logo"></a>
      <div class="col-sm-3 col-md-4 col-lg-2 col-xl-3">
        <form name="dateForm" id="searchRecip" class="form-inline ml-sm-0">
          <select name="time" id="recipeSearch1">
            <option value="searchRecipe">Search for Recipes</option>
            <option value="clearRecipe">Clear Recipe Search</option>
          </select>
        </form>
      </div>
      <div class="col-sm-6 col-md-4 col-lg-4 col-xl-5">
        <form class="form-inline my-2 my-lg-0 ">
          <input class="form-control mr-sm-2 validate" type="search" placeholder="Search" aria-label="Search" id="searchBar"
            required>
          <button class="btn btn-outline-light my-2 my-sm-0" type="submit" id="submit">Submit</button>
        </form>
      </div>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation" id="searchBtn">
        <span class="navbar-toggler-icon navbar-toggler-right"></span>
      </button>
      <div class="col-lg-4 mx-auto">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav " id="navigation">

            <li class="nav-item">
              <a class="nav-link text-white" href="/" id="homeLink">Home</a>
            </li>

            <li class="nav-item ">
              <a class="nav-link text-white" id="menuLink" href="/menu">Recipes</a>
            </li>

            <li class="nav-item">
              <a class="nav-link text-white" href="/form" id="formLink">Create </a>
            </li>
            <div>
              <li class="nav-item dropdown">
                <a class="nav-link text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown"
                  aria-haspopup="true" aria-expanded="false">
                  Sign In
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                  <form action="" class="dropdown-item" id="loginForm">
                    <label for="email">Email:</label>
                    <input type="email" id="email" class="log-cl">
                    <br>
                    <label for="password">Password:</label>
                    <input type="password" id="password" class="log-cl">
                    <br>
                    <button type="submit" class="btn btn-danger" id="signInBtn">Submit</button>
                  </form>
                </div>
              </li>
            </div>
            <li class="nav-item">
              <!-- Link trigger modal -->
              <a data-toggle="modal" data-target="#signUpModal" class="nav-link text-white" href="#">
                Sign Up
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    </div>

    <!--Register Modal -->
    <div class="modal fade" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
      aria-hidden="true">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title text-white" id="exampleModalCenterTitle">Sign Up</h5>
            <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close" id="modalClose">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body text-white">
            <form>
              <div class="form-group ">
                <label for="registerEmail">Email address</label>
                <input type="email" class="form-control reg-cl" id="registerEmail" aria-describedby="emailHelp"
                  placeholder="Enter email">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
              </div>
              <div class="form-group">
                <label for="registerPassword">Password</label>
                <input type="password" class="form-control reg-cl" id="registerPassword" placeholder="Password">
              </div>
              <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" class="form-control reg-cl" id="confirmPassword" placeholder="Password">
              </div>
              <button type="submit" class="btn btn-light" id="signUpBtn">Submit</button>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-light" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
    </div>
    <div class="fill tinted-image">
      <div id="content">
        <div class="row row-div">
          <div class="content2 col-lg-11 offset-1"></div>
          {{{body}}}
        </div>
      </div>
    </div>
